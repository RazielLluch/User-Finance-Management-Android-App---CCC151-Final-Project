<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/budget_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/inter_bold"
        android:textAlignment="center"
        android:textSize="19sp"
        android:text="budget name"
        />

    <TextView
        android:id="@+id/timeframe_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="@font/inter_bold"
        android:textAlignment="center"
        android:textSize="19sp"
        android:text="budget timeframe: "
        />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/start_date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="170dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/inter_bold"
                android:textAlignment="textStart"
                android:textSize="19sp"
                android:text="from"
                />

            <TextView
                android:id="@+id/end_date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/inter_bold"
                android:textAlignment="textStart"
                android:textSize="19sp"
                android:text="to"
                />

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/inter_bold"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:text="expenses:"
        />

    <ScrollView
        android:id="@+id/transactions_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        >


    </ScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Close"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="delete"/>

    </LinearLayout>

</LinearLayout>
