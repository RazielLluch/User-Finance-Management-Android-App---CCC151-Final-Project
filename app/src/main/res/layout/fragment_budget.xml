<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment"
    android:id="@+id/budget_frame"
    android:background="#e8e8e8"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transactions_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:id="@+id/transactions_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <LinearLayout
                android:id="@+id/transactions_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:elevation="10dp"
                android:background="@drawable/custome_border"
                android:backgroundTint="#ffffff"
                >

                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Budgets"
                    />

                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This month"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ProgressBar
                        android:id="@+id/monthly_budget_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_marginHorizontal="10dp"
                        android:minHeight="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:max="100"/>

                    <TextView
                        android:id="@+id/monthly_budget_progress_value"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="0%"
                        android:textSize="10dp"
                        />


                </LinearLayout>

                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This week"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/weekly_budget_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_marginHorizontal="10dp"
                        android:minHeight="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:max="100"/>

                    <TextView
                        android:id="@+id/weekly_budget_progress_value"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="0%"
                        android:textSize="10dp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This day"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/daily_budget_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_marginHorizontal="10dp"
                        android:minHeight="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:max="100" />

                    <TextView
                        android:id="@+id/daily_budget_progress_value"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_transaction_button"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/transactions_constraint_layout"
            app:layout_constraintBottom_toBottomOf="@id/transactions_constraint_layout"
            app:layout_anchor="@id/transactions_constraint_layout"
            android:src="@drawable/plus_icon"
            android:backgroundTint="@color/tertiary"
            android:contentDescription="add new budget"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>